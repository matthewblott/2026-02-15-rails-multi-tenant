<% content_for :title, "Todos" %>

<h1>Todos</h1>

<div id="todos">
  <% @todos.each do |todo| %>
    <%= render todo %>
    <p>
      <%= link_to "Show this todo",  user_todo_path(Current.user, todo) %>
    </p>
  <% end %>
</div>

<%= link_to "New todo", user_new_todo_path %>
